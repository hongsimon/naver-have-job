<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jobless.dao.mapper.IUserMapper">
	<insert id="insertUser" parameterType="User">
		insert into taku.user(login_id, nickName, password, email, platform_id) values(#{login_id}, #{nickName}, #{password}, #{email}, #{platform_id})
	</insert>
	<select id="selectUserById" resultType="User" parameterType="int">
		select * from user where userId = #{userId}
	</select>
	<select id="selectAllUser" resultType="User">	
		select * from user
	</select>
	<delete id="deleteUser" parameterType="int">
		delete from user where userId = ${userId}
	</delete>
	<update id="updateUser" parameterType="User">
		update user set nickName = ${nickName} where userId = ${userId}
	</update>
</mapper>
